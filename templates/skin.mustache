<header>
	<div class="skin-wmau-container">
		<h1 id="sitename">
			<a href="{{url-mainpage}}" title="{{msg-sitetitle}}">
				{{#data-logos}}
					{{#wordmark}}
						<img src="{{src}}" width="{{width}}" height="{{height}}" alt="{{msg-logo-wordmark-alt}}" />
					{{/wordmark}}
					{{^wordmark}}
						{{msg-sitetitle}}
					{{/wordmark}}
				{{/data-logos}}
			</a>
		</h1>
		<nav>
			<ul class="skin-wmau-list-horizontal">
				{{#array-header-menu}}
					{{{li}}}
				{{/array-header-menu}}
			</ul>
			{{#data-search-box}}
				<form action="{{form-action}}" id="searchform">
					<div class="skin-wmau-searchform-inner">
						<input type="hidden" name="title" value="{{page-title}}" />
						{{{html-input}}}
						{{{html-button-search}}}
					</div>
				</form>
			{{/data-search-box}}
		</nav>
	</div>
</header>

{{{html-site-notice}}}

{{#is-user-registered}}
	<aside class="skin-wmau-action-drawer">
		<ul>
			<li class="skin-wmau-feathericons-tool"><span>Tools</span></li>
			{{# array-tools}}
				{{{li}}}
			{{/array-tools}}
		</ul>
	</aside>
{{/is-user-registered}}

<article class="mw-body skin-wmau-container">

	{{#data-subject-page}}{{>icon-link}}{{/data-subject-page}}

	{{#page-title}}
		<h1 class="skin-wmau-title">
			<a href="{{url}}">
				{{#ns}}<span class="skin-wmau-title-ns">{{.}}</span>{{/ns}}
				<span class="skin-wmau-title-text">{{text}}</span>
			</a>
		</h1>
	{{/page-title}}

	{{{html-subtitle}}}

	{{{html-body-content}}}

	{{{html-after-content}}}

	{{#data-talk-page}}{{>icon-link}}{{/data-talk-page}}

</article>

<footer>
	<div class="skin-wmau-container">
		<section class="skin-wmau-footer-left">
			{{#data-logos}}
				{{#icon}}
					<img src="{{.}}" width="50" height="50" alt="{{msg-wmau-logo-icon-alt}}" />
				{{/icon}}
			{{/data-logos}}
			<p class="skin-wmau-contact">
				<strong>{{msg-wmau-site-full-title}}</strong>
				{{#msg-wmau-site-email}}
					<br>
					<a href="mailto:{{.}}">{{.}}</a>
				{{/msg-wmau-site-email}}
			</p>
		</section>
		<section class="skin-wmau-footer-right">
			<ul class="skin-wmau-list-horizontal">
				{{#array-footer-menu-1}}
					{{{li}}}
				{{/array-footer-menu-1}}
			</ul>
			<ul class="skin-wmau-list-horizontal">
				{{#array-footer-menu-2}}
					{{{li}}}
				{{/array-footer-menu-2}}
			</ul>
		</section>
	</div>
</footer>
